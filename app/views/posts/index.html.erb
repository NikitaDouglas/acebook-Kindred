<%= render "partials/navbar" %>

  <section class="jumbotron text-center">
    <div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    </div>
    <div class="container">
      <h1>Welcome to Kindred</h1>
      <p class="lead text-muted">Created by Nikita, Sophie, Tim and Victor.</p>
      <p>
        <a href="/posts/new" class="btn btn-danger my-2">Write a post...</a>
      </p>
    </div>
  </section>

<% @posts.each do |post| %>
<div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h3 class="card-text"> <%= post.name %></h3>
              <p class="card-muted"> <%= post.user.email %></p>
              <p class="card-text"> <%= post.message %></p>
                <p class="text-muted"> <%= post.created_at %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <form>
                    <input type="button" class="btn btn-danger my-2" value="♥️" id="like">
                  </form>
                </div>
                <small class="text-muted">x Likes</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
